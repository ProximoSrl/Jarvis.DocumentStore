<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <root>
    <level value="DEBUG"/>
    <appender-ref ref="ColoredConsoleAppender"/>
    <!--<appender-ref ref="mongo-appender"/>-->
  </root>
  
  <logger name="Topshelf" additivity="false">
    <level value="DEBUG" />
    <appender-ref ref="ColoredConsoleAppender" />
  </logger>
  
  <logger name="Rebus" additivity="false">
    <level value="DEBUG" />
    <appender-ref ref="ColoredConsoleAppender" />
  </logger>
  
  <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="ERROR"/>
      <foreColor value="Red, HighIntensity"/>
    </mapping>
    <mapping>
      <level value="WARN"/>
      <foreColor value="Yellow, HighIntensity"/>
      <backColor value="Blue"/>
    </mapping>
    <mapping>
      <level value="INFO"/>
      <foreColor value="White, HighIntensity"/>
      <backColor value="Blue"/>
    </mapping>
    <mapping>
      <level value="DEBUG"/>
      <foreColor value="White"/>
      <backColor value="Blue"/>
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-5level %logger [%-5thread] - %message%newline"/>
    </layout>

  </appender>

  <appender name="mongo-appender" type="Jarvis.Framework.MongoAppender.BufferedMongoDBAppender, Jarvis.Framework.MongoAppender">
    <threshold value="INFO" />
    <SaveOnDifferentThread value="true" />
    <settings>
      <connectionString value="mongodb://admin:123456##@localhost/ds-logs?authSource=admin&amp;connectTimeoutMS=5000" />
      <collectionName value="logs" />
      <programName value="DocumentStoreHost" />
      <looseFix value="true" />
      <expireAfter>
        <days value="5"/>
      </expireAfter>
    </settings>
  </appender>
</log4net>